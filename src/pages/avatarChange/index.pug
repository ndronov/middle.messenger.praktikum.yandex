doctype html

html
    head
        meta(charset="UTF-8")
        title Изменение аватара
        link(rel="stylesheet", href="./index.scss")
    body
        main.app
            aside.aside-panel
                button.back-button(type="button") &#8592;

            div.settings-form
                div.avatar

                label.label(for="email") Почта
                    input.input(type="email", id="email", name="email", value="pochta@yandex.ru")

                label.label(for="login") Логин
                    input.input(type="text", id="login", name="login", value="ivanivanov")

                label.label(for="first_name") Имя
                    input.input(type="text", id="first_name", name="first_name", value="Иван")

                label.label(for="second_name") Фамилия
                    input.input(type="text", id="second_name", name="second_name", value="Иванов")

                label.label(for="display_name") Имя в чате
                    input.input(type="text", id="display_name", name="display_name", value="Иван")

                label.label(for="phone") Телефон
                    input.input(type="tel", id="phone", name="phone", value="+7 (909) 967 3030")

                div.links
                    a.link(href="#") Изменить данные
                    a.link(href="#") Изменить пароль
                    a.link.exit-link(href="#") Выйти

        div.modal-backdrop
            form.avatar-form
                h3.title Загрузите файл

                label.label(for="avatar") Выбрать файл на компьютере
                    input.input(type="file", accept="image/*", id="avatar", name="avatar")

                button.submit-button(type="submit") Поменять

        script(src='./index.ts')
