{
  "name": "middle.messenger.praktikum.yandex",
  "version": "2.0.0",
  "description": "Messenger application",
  "scripts": {
    "prebuild": "rimraf build/*",
    "build": "parcel build ./src/index.html --no-scope-hoist --dist-dir build",
    "dev": "parcel serve ./src/index.html --open --dist-dir .parcel-serve",
    "prestart": "rimraf build/*",
    "start": "parcel build ./src/index.html --no-scope-hoist --dist-dir build && node server",
    "server": "node server",
    "lint": "eslint --ext .ts src",
    "stylelint": "stylelint src/**/*.scss",
    "test": "mocha --require ts-node/register src/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndronov/middle.messenger.praktikum.yandex.git"
  },
  "author": "Nikita Dronov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ndronov/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/ndronov/middle.messenger.praktikum.yandex#readme",
  "dependencies": {
    "@types/pug": "^2.0.5",
    "@types/uuid": "^8.3.0",
    "express": "^4.17.1",
    "pug": "^3.0.2",
    "sanitize-html": "^2.5.3",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.0.1",
    "@parcel/transformer-image": "^2.0.1",
    "@parcel/transformer-sass": "^2.0.1",
    "@types/chai": "^4.2.22",
    "@types/jsdom": "^16.2.13",
    "@types/mocha": "^9.0.0",
    "@types/sanitize-html": "^2.5.0",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.4",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "jsdom": "^18.1.1",
    "mocha": "^9.1.3",
    "parcel": "^2.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.3.2"
  }
}
