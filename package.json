{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Messenger application",
  "scripts": {
    "prebuild": "rimraf build/*",
    "build": "parcel build ./src/index.pug --dist-dir build",
    "dev": "parcel serve ./src/index.pug --open --dist-dir .parcel-serve",
    "prestart": "rimraf build/*",
    "start": "parcel build ./src/index.pug --dist-dir build && node server",
    "lint": "eslint --ext .ts src",
    "stylelint": "stylelint src/**/*.scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndronov/middle.messenger.praktikum.yandex.git"
  },
  "author": "Nikita Dronov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ndronov/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/ndronov/middle.messenger.praktikum.yandex#readme",
  "dependencies": {
    "express": "^4.17.1",
    "pug": "^3.0.2",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.0.0-beta.2",
    "@parcel/transformer-sass": "^2.0.0-beta.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "parcel": "^2.0.0-beta.2",
    "parcel-reporter-static-files-copy": "^1.3.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.3.2"
  },
  "engines": {
    "node": ">=14.17.0"
  }
}
